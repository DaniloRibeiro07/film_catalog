<%= form_with model: movie do |f|%>
  <%= f.label 'Nome do Filme: '%>
  <%= f.text_field :title%>
  <br>
  <%= f.label 'Ano de lançamento: '%>
  <%= f.number_field :release_year%>
  <br>
  <%= f.label 'País de Origem:'%>
  <%= f.text_field :country_of_origin%>
  <br>
  <%= f.label 'Duração:'%>
  <%= f.number_field :duration%>
  <br>
  <%= f.label 'Sinopse:'%>
  <%= f.text_area :synopsis%>
  <br>
  <%= f.label 'Gênero'%>
  <%= f.collection_select :genre_id, Genre.all, :id, :name %>
  <br>
  <%= f.label 'Diretor Responsável'%>
  <%= f.collection_select :director_id, Director.all, :id, :name %>
  <br>
  <%= f.label 'Já lançado ?'%>
  <%= f.check_box :released, {checked: movie.released_for_database}%>
  <br>
  <%= f.label 'Publicar ?'%>
  <%= f.check_box :status, {checked: movie.status_for_database}%>
  <br>
  <%= f.label 'Imagem:'%>
  <% if @movie.avatar.attached? %>
    <%= image_tag @movie.avatar.variant(:thumb) %>
    <%= link_to "Apagar Foto", remove_photo_movie_path(@movie.id)%>
  <% end %>
  <br>
  <br>
  <%= f.file_field :avatar %>
  <br><br>
  <%= f.submit 'Salvar'%>
<%end%>



